<!-- TODO: make this a public id or at least obsolute 
     Currently there is a semi-hack built in the RendererPlugin to accept this format.
-->
<renderers-config>
    <!--@ Tag Renderers -->
    
    <renderer type="java.util.Collection" layout="tag-count" class="pt.ist.fenixedu.integration.ui.renderers.TagCountRenderer">
        <property name="moduleRelative" value="true"/>
        <property name="contextRelative" value="true"/>
        <property name="separator" value="|"/>
    </renderer>

    <renderer type="java.util.Collection" layout="tag-cloud" class="pt.ist.fenixedu.integration.ui.renderers.TagCloudRenderer">
        <property name="moduleRelative" value="true"/>
        <property name="contextRelative" value="true"/>
        <property name="numberOfLevels" value="6"/>
    </renderer>
    

    <renderer type="java.util.Collection" layout="tag-search" class="pt.ist.fenixedu.integration.ui.renderers.AdvancedTagCloudSearchRenderer">
        <property name="moduleRelative" value="true"/>
        <property name="contextRelative" value="true"/>
        <property name="numberOfLevels" value="6"/>
        <property name="parameter" value="tags"/>
        <property name="selectedTagClass" value="tcloudselected"/>
        <property name="nearByTagClass" value="tcloudnearBy"/>
    </renderer>

    <renderer mode="input" type="java.lang.String" layout="tag-cloud" class="pt.ist.fenixedu.integration.ui.renderers.TagInputCloudRenderer">
        <property name="textClasses" value="smalltxt color888"/>
    </renderer>

    <!--@ Renders one or more (in case of group union) groups names. The group must support getName -->
    <renderer type="org.fenixedu.bennu.core.groups.Group" layout="show-groups" class="pt.ist.fenixedu.integration.ui.renderers.GroupRenderer"/>
</renderers-config>
